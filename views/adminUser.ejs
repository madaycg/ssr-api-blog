<!DOCTYPE html>
<html>
  <head>
    <link href="/css/styles.css" rel="stylesheet" />
    <%- include("partials/meta") %>
  </head>
  <body class="black">
    <%- include("partials/navbar") %>

    <div class="container mt-90">
      <div class="row">
        <div class="col mt-2">
          <h1>Listado de Usuarios</h1>
        </div>
        <div class="col mt-2 text-end">
          <a class="btn btn-success" href="/admin/user/create">Nuevo</a>

        </div>
      </div>
      <div class="row">
        <div class="col">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Acci√≥n</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(user => { %>
              <tr>
                <td><%=user.firstname%></td>
                <td><%=user.lastname%></td>
                <td><%=user.email%></td>
                <td><%=user.role.name%></td>
              
                <td class="d-flex justify-content-center align-items-center">
                  <a href="/admin/user/edit/<%=user.id%>" class="btn btn-primary">Editar</a>
                  <a href="/admin/user/delete/<%=user.id%>" class="btn btn-danger">Eliminar</a>
                </td>
              </tr>

              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <%- include("partials/scripts") %>
  </body>
</html>
