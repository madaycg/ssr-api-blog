<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/meta") %>
    <link href="/css/styles.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Navigation-->
    <%- include("partials/navbar") %>
    <!-- Page Header-->
    <header class="masthead">
      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="site-heading">
              <h1>El Software </h1>
              <span class="subheading">Se est√° comiendo al mundo</span>
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Main Content-->
    <div class="container px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
          <!-- Post preview-->
          <div class="post-preview">
            <% articles.forEach(article => { %>
            <a href="/article/<%=article.id%>">
              <h2 class="post-title"><%=article.title%></h2>
            </a>
            <p><%= article.content.substring(0,300) %> (...)</p>
            <hr />
            <p id="author" class="text-muted">Autor: <%= article.author %></p>
            <p id="date" class="text-muted">
              <%=article.createdAt.toLocaleString('es-ES', {dateStyle: 'long', timeStyle:
              'short'})%>
            </p>
            <% }) %>
          </div>
          <!-- Divider-->
          <hr class="my-4" />
          <!-- Post preview-->
        </div>
      </div>
    </div>
    <!-- Footer-->
    <%- include("partials/footer.ejs")%> <%- include("partials/scripts.ejs") %>
  </body>
</html>
